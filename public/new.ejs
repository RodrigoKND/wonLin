    <script>
        const name = document.querySelector(".name_user")
        const warning = document.querySelector(".warning")
        name.addEventListener("keyup", (event) => {
            const valueName = event.target.value
            const uun = JSON.parse('<%- uu.replace(/' / g, "\\'") %> ')
            if (uun[valueName] === valueName) { warning.removeAttribute("hidden"); let e = document.createElement("div"); e.classList.add("p-2", "border", "bg-info-light"), e.innerHTML = "Sugerencia: " + valueName + "<%=count%>", warning.innerHTML = "Ya existe el nombre de " + valueName, warning.appendChild(e) } else warning.setAttribute("hidden", "hc"); "Backspace" === event.key && warning.setAttribute("hidden", "hc");
        })

    </script>

