<body style="background: rgb(9, 47, 69);">
    <form method="post" action="/auth">
        <!-- <a class="text-white fs-3 p-2 mt-3" href="/login" style="cursor:pointer"><i class="bi bi-arrow-left"></i></a> -->
        <div class="card border border-0" style="margin-top: 20px; background: none;">
            <div class="card-header border border-0">
                <svg height="50">
                    <circle cx="240" cy="20" r="20" fill="purple"></circle>
                    <ellipse class="ellip" cx="230" cy="15" rx="10" ry="5" fill="white"></ellipse>
                    <ellipse cx="250" cy="15" rx="10" ry="5" fill="white"></ellipse>
                    <circle class="eyeLeft" cx="230" cy="15" r="3" fill="black"></circle>
                    <circle class="eyeRight" cx="250" cy="15" r="3" fill="black"></circle>
                </svg>
            </div>
            <div class="card-body border border-0 text-white">
                <div class="p-2 warning" hidden></div>
                <label for="name">Nombre de usuario</label>
                <input class="form-control mt-3 name_user" placeholder="Nombre de usuario" name="name" maxlength="15"
                    required />
                <label class="mt-3" for="email">Correo</label>
                <input type="email" class="form-control p-2 border border-primary mt-3" id="email" name="emailUser"
                    required />
                <label class="mt-3" for="Password">Contrase√±a</label>
                <input type="password" class="form-control p-2 border border-primary mt-3" id="Password" name="passwd"
                    required />
                <div class="d-flex justify-content-center mt-4">
                    <button class="btn text-white" type="submit"
                        style="background: linear-gradient(to right, rgb(0,194,168), blue);">Enviar</button>
                </div>
            </div>
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
